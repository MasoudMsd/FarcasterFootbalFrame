<body>
  <h1>تیم منتخب من ⚽</h1>
  <p>بازیکن‌های مورد علاقه‌ات را انتخاب کن!</p>

  <button id="addPlayerBtn">➕ اضافه کردن بازیکن</button>

  <ul id="teamList"></ul>

  <script>
    document.getElementById("addPlayerBtn").addEventListener("click", () => {
      const playerName = prompt("نام بازیکن را وارد کنید:");
      if (playerName && playerName.trim() !== "") {
        const li = document.createElement("li");
        li.textContent = playerName.trim();
        document.getElementById("teamList").appendChild(li);
      }
    });
  </script>
